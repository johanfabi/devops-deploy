pipeline {

    agent any

    parameters {
        choice(name: 'DEPLOY_ACTION', choices: ['deploy', 'update', 'delete'], description: 'Seleccione la acci贸n a realizar.')
        string(name: 'LAMBDA_NAME', description: 'Nombre de la Lambda Function.', defaultValue: 'hello-world')
        string(name: 'LAMBDA_DIR', description: 'Directorio con el c贸digo fuente.', defaultValue: 'aws/jenkins/lambda-function')
        choice(name: 'RUNTIME', choices: ['python3.8', 'python3.12', 'nodejs12.x'], description: 'Seleccione el lenguaje de programaci贸n.')
        choice(name: 'REGION', choices: ['us-east-1', 'us-east-2', 'us-west-1', 'us-west-2'], description: 'Seleccione la regi贸n.')
    }

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws_access_key_id')
        AWS_SECRET_ACCESS_KEY = credentials('aws_secret_access_key')
        AWS_DEFAULT_REGION    = 'us-east-1'
        ZIP_FILE= "${LAMBDA_NAME}.zip"
        ROLE="arn:aws:iam::810237447559:role/lambda-ex"
        HANDLER="lambda_function.lambda_handler"
    }

    stages {
        stage('Configurando AWS CLI') {
            steps {
                script {
                    print '########## Configurando AWS CLI... ##########'
                    sh 'printenv'
                    sh 'ls -lt $LAMBDA_DIR'
                }
            }
        }
        stage('Empaquetando Lambda Function') {
            steps {
                script {
                    print '########## Empaquetando Lambda Function... ##########'
                    sh 'cd $LAMBDA_DIR && rm -f *.zip && zip -r $ZIP_FILE main.py requeriments.txt'
                    sh 'ls -lt $LAMBDA_DIR'
                }
            }
        }
        stage('Desplegardo Lambda Function') {
            steps {
                script {
                    case DEPLOY_ACTION:
                    when 'deploy'
                        sh '''
                            aws lambda create-function --function-name $LAMBDA_NAME --zip-file fileb://$LAMBDA_DIR/$ZIP_FILE --handler $HANDLER --runtime $RUNTIME --role $ROLE --region $REGION
                        '''
                    when 'update'
                        sh '''
                            aws lambda update-function-code --function-name $LAMBDA_NAME --zip-file fileb://$LAMBDA_DIR/$ZIP_FILE --region $REGION
                        '''
                    when 'delete'
                        sh '''
                            aws lambda delete-function --function-name $LAMBDA_NAME --region $REGION
                        '''
                    break
                }
            }
        }
    }
}